{
	"adapters": {
		"dart": {
			"variables": {
				"root": "/home/<your username>/sdk/Dart-Code"
			},
			"type": "dart",
			"command": ["node", "${root}/out/src/debug/debug_entry.js", "dart"]
		}
	},
	"configurations": {
		"Dart: Launch": {
			"adapter": "dart",
			"configuration": {
				"request": "launch",
				"type": "dart",
				"flutterSdkPath": "/home/<your-username>/sdk/flutter",
				"dartSdkPath": "/home/<your-username>/sdk/flutter/bin/cache/dart-sdk/bin",
				"program": "${workspaceRoot}/<name-of-file>.dart",
				"cwd": "${workspaceRoot}"
			}
		}
	}
}
